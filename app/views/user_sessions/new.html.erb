
<script>
  $(function() { $('a.popup').colorbox(); });
</script>

<div id="login_panel" class="popup_panel">
  <h2>Log in <span>(or create <%= link_to "new account", new_user_path, :class => 'popup' %>)</span></h2>

  <%= form_for @user_session, :id => 'login_form', :url => user_session_path, :remote => true do |f| %>
  
    <div class="content">
      <%= content_tag :div, nil, :id => 'login_message', :class => 'hidden' %>

      <div>
        <%= f.label :email %>
        <%= f.text_field :email, :placeholder => 'Your e-mail' %>
      </div><div>
        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => 'Your password' %>
      </div><div>
        <%= link_to "Forgot your password?", new_password_reset_path, class: 'popup' %>
      </div>
    </div>
  
    <div class="footer">
      <p>
        <%= f.check_box :remember_me %> 
        <span>Please keep me logged in</span>
      </p>
      <div><%= f.submit 'Log in', disable_with: 'Logging in...', class: 'ok' %></div>
    </div>
  
  <% end %>
</div>
