 *= require_self
*/

body {
  text-align: left;
  width: 1000px;
  margin: 0 auto;
  font-family: sans-serif;
  font-size: 12px;
}

input[type="text"], input[type="password"], input[type="url"], input[type="email"], input.text, input.title, textarea {
  padding: 5px;
}

ul, ol {
  list-style-type: none;
  padding: 0; margin: 0;
}

input[type="submit"].ok {
  font-weight: bold;
  height: 30px;
  width: 150px;

  color: #fff;
  border: 1px solid #c8ff59;
  background-color: #b2ff1a;
}

input[type="submit"][disabled].ok {
  color: #fff;
  border: 1px solid #eee;
  background-color: #ccc;
}

.hidden { display: none; }
.clear { float: none; clear: both; }

/* Top bar */

#topbar {
  height: 70px;
  line-height: 70px;
  text-align: right;
  
  border-radius: 10px 10px 0 0;
  
  background-color: #262626;
  background-image: -webkit-linear-gradient(top, #262626, #000000);
  background-image:    -moz-linear-gradient(top, #262626, #000000);
  background-image:     -ms-linear-gradient(top, #262626, #000000);
  background-image:      -o-linear-gradient(top, #262626, #000000);
}

#topbar a {
  text-decoration: none;
  color: #ffffff;
}

#logo {
  margin-left: 40px;
  float: left;
}

#logo img { vertical-align: middle; }

/* Top menu */

#topmenu {
  float: right;
  margin-right: 40px;
}

#topmenu li { 
  display: inline-block;
  padding: 0 20px 0 20px;
  vertical-align: top;
}

#topmenu li:hover {
  background-color: #222222;
  background-image: -webkit-linear-gradient(top, #262626, #222222);
  background-image:    -moz-linear-gradient(top, #262626, #222222);
  background-image:     -ms-linear-gradient(top, #262626, #222222);
  background-image:      -o-linear-gradient(top, #262626, #222222);
}

#topmenu li.menu-division {
  width: 2px;
  height: 70px;
  padding: 0;
  margin: 0;
  background-image: url(<%= image_path 'border_line.jpg' %>);
}

#topmenu li.menu-selected {
  background-color: #3f3f3f;
  background-image: -webkit-linear-gradient(top, #3f3f3f, #222222);
  background-image:    -moz-linear-gradient(top, #3f3f3f, #222222);
  background-image:     -ms-linear-gradient(top, #3f3f3f, #222222);
  background-image:      -o-linear-gradient(top, #3f3f3f, #222222);
}

/* Submenu */

#topmenu li.submenu {
  position: relative;
}

#topmenu li.submenu ul {
  position: absolute;
  right: 0px;

  width: 100%;
  border-radius: 0 0 10px 10px;

  background-color: #131313;
  background-image: -webkit-linear-gradient(top, #131313, #000000);
  background-image:    -moz-linear-gradient(top, #131313, #000000);
  background-image:     -ms-linear-gradient(top, #131313, #000000);
  background-image:      -o-linear-gradient(top, #131313, #000000);

  padding: 5px 0 10px 0;
  line-height: 14px;
  display: none;
}

#topmenu li.submenu:hover ul { 
  display: block;
}

#topmenu li.submenu:hover {  
  background-color: #262626;
  background-image: -webkit-linear-gradient(top, #262626, #131313);
  background-image:    -moz-linear-gradient(top, #262626, #131313);
  background-image:     -ms-linear-gradient(top, #262626, #131313);
  background-image:      -o-linear-gradient(top, #262626, #131313);
}

#topmenu li.submenu ul li { 
  display: block; 
  margin: 5px 20px;
  padding: 5px 0px;
}

#topmenu li.submenu ul li:hover { 
  background: none;
}

#topmenu li.submenu ul a {
  text-decoration: underline;
}

#topmenu li.submenu ul a:hover {
  color: #ff8c1a;
}

/* Content */

#content {
  margin-top: 10px;
}

/* Panel */

.panel {
  border: 1px solid #e6e6e6;
  border-radius: 10px;
  
  -moz-box-shadow:    1px 1px 3px #ccc;
  -webkit-box-shadow: 1px 1px 3px #ccc;
  box-shadow:         1px 1px 3px #ccc;
  
  margin-top: 15px;
}

.panel .header {
  border-bottom: 1px solid #e6e6e6;
  padding: 10px 30px;
}

.panel h2 {
  float: left;
  margin: 0;
}

.panel .buttons {
  float: right;
}

.panel button {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px 10px;
  background-color: #fff;
  
  color: #999;
  font-weight: bold;
}

.panel button:hover {
  background-color: #ff8c1a;
  border: 1px solid #ff8c1a;
  
  color: #fff;
}

.panel .content {
  padding: 15px 30px;
}

.panel .search_input {
  float: left;
}

/* Popular songs */

#popular_songs {
  overflow-x: auto;
  overflow-y: hidden;
  height: 250px;
  
  white-space: nowrap;
}

#popular_songs .song {
  padding: 10px;
  display: inline-block;
  text-align: center;
  white-space: normal;
  
  width: 170px;
  height: 100%;
  vertical-align: top;
}

#popular_songs a:hover {
  color: #ff8c1a;
}

#popular_songs .song img {
  width: 150px;
  height: 150px;
}

#popular_songs .song_title {
  font-size: 14px;
}

#popular_songs .song p {
  margin: 0;
  line-height: 16px;
}

#popular_songs .song_artist {
  color: #999;
}

/* Scroll bar */

.jspHorizontalBar {
  height: 11px;
  background: none;
}

.jspHorizontalBar .jspArrow {
  width: 15px;
}

.jspHorizontalBar .jspArrowLeft {
  background: url(<%= image_path 'left_arrow.png' %>) no-repeat;
}

.jspHorizontalBar .jspArrowRight {
  background: url(<%= image_path 'right_arrow.png' %>) no-repeat;
}

.jspHorizontalBar .jspTrack {
  background: url(<%= image_path 'horizontal_bg_scroller.png' %>) repeat-x;
}

.jspVerticalBar {
  width: 11px;
  background: none;
}

.jspVerticalBar .jspArrow {
  height: 15px;
}

.jspVerticalBar .jspArrowUp {
  background: url(<%= image_path 'up_arrow.png' %>) no-repeat;
}

.jspVerticalBar .jspArrowDown {
  background: url(<%= image_path 'down_arrow.png' %>) no-repeat;
}

.jspVerticalBar .jspTrack {
  background: url(<%= image_path 'vertical_bg_scroller.png' %>) repeat-y;
}

.jspDrag {
  background-color: #ccc;
}

.jspDrag:hover {
  background-color: #ff8c1a;
}

/* Popup panel */

.popup_panel {
  width: auto;
  margin: 0;
  padding: 0;
}

.popup_panel .content {
  padding: 10px;
}

.popup_panel .footer {
  border-top: 1px solid #eee;
  padding: 10px;
}

.popup_panel label { display: none; }

.popup_panel input[type="checkbox"] {
  margin-right: 5px;
}

/* Breadcrumb */

ul.breadcrumb {
  line-height: 70px;
  overflow: hidden;
  font-size: 0;
  
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

ul.breadcrumb li {
  display: inline-block;
  padding: 0 20px 0 20px;
  vertical-align: top;  
  width: 135px;
  
  font-size: 14px;
  font-weight: bold;
  color: #ccc;
  text-align: center;
}

ul.breadcrumb li:first-of-type {
  position: static;
}

ul.breadcrumb li.current {
  color: #fff;
  
  border-right: none;
  background: 
    url(<%= image_path 'breadcrumb_step_current.png' %>) right center no-repeat,
    url(<%= image_path 'breadcrumb_step_done.png' %>) left center no-repeat,
    #999 !important;
    
    
  position: relative;
  left: -15px;
  width: 150px;
}

ul.breadcrumb li.done {
  color: #999;

  background: #ccc url(<%= image_path 'breadcrumb_step_done.png' %>) left center no-repeat;
  border-right: none;
}

ul.breadcrumb li:first-of-type {
  background-image: none;
}

/* Form */

span.field_error {
  padding-left: 10px;
  color: red;
}

/* Login panel */

#login_panel { width: 500px; }

#login_panel h2 {
  border-bottom: 1px solid #eee;
  padding: 10px;
  margin: 0;
}

#login_panel h2 span {
  font-size: 70%;
  color: #999;
}

/* Karaoke player */

#karaoke { width: auto; text-align: center; padding-top: 10px; }

/* Search panel */

#search_panel .header {
  border-bottom: none;
}

#search_input {
  width: 250px; 
  height: 25px;
  padding-left: 30px;
  background: url(<%= image_path 'search_icon.png' %>) left center no-repeat;
}

#search_indicator {
  display: inline-block;
  height: 100%;
  width: 16px;
  
  position: relative;
  left: -30px;
  
  background: url(<%= image_path 'clear_gray.png' %>) left center no-repeat;
}

#search_indicator:hover {
  background: url(<%= image_path 'clear_red.png' %>) left center no-repeat;
}

#search_indicator.progress {
  background: url(<%= image_path 'progress_indicator.gif' %>) left center no-repeat;
}

/* Search result */

#search_result {
  padding: 5px 30px;
}

#search_result .song {
  padding: 5px 10px;
}

#search_result li:hover {
  background-color: #ff8c1a;
}

#search_result li {
  border-top: 1px solid #eee;
}

#search_result img {
  float: left;
  width: 50px;
  height: 50px;
}

#search_result .song_info {
  float: left;
  padding-left: 10px;
  
  font-size: 14px;
}

#search_result .song_statistic {
  float: right;
  padding-right: 10px;
}

#search_result p {
  margin: 0;
}

#search_result a {
  color: #999;
}

#search_result a li:hover {
  color: #fff;
}

#search_result .song_title {
  font-weight: bold;
}

