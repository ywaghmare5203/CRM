
<script>
  $(function() {
    scroll_pane = $('#popular_songs').jScrollPane({ showArrows: true }); 
  });
</script>

<%= render :partial => 'search_panel' %>

<div class="panel">
  <div class="header">
    <h2>Popular Songs</h2>
    <div class="buttons">
      <button>Today</button>
      <button>Last week</button>
      <button>This month</button>
      <button>All time</button>
    </div>
    <div class="clear"></div>
  </div>
  
  <div class="content">
  
    <ul id="popular_songs">
    
      <% @songs.each do |song| %>
        <li class="song">
          <%= link_to karaoke_path(song.id) do %>
            <%= image_tag('sample_album_pict.jpg', :alt => song.title) %>
          <% end %>
          <p class="song_title"><%= song.title %></p>
          <p class="song_artist">by <%= song.artist.name %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>

